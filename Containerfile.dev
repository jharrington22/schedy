FROM docker.io/golang:1.25-alpine

RUN apk add --no-cache ca-certificates tzdata git bash
WORKDIR /workspace

# Install resy-cli (build from source) and place it as /usr/local/bin/resy
RUN go install github.com/lgrees/resy-cli@latest &&     if [ -f /go/bin/resy-cli ]; then mv /go/bin/resy-cli /usr/local/bin/resy; fi &&     if [ -f /go/bin/resy ]; then mv /go/bin/resy /usr/local/bin/resy; fi

EXPOSE 8080
